<div class="container-fluid bgLightBlue pb-md-4 pt-3 pb-0">
  <div class="d-block">
    <section class="container bg-white card card-body shadow shadow-sm">
      <p class="font-weight-lighter text-center bg-light py-2 mb-4 h3">
        <strong>Tutor Profile</strong>
      </p>

      <form class="container" action="/api/editProfile" method="POST">
        <fieldset class="fieldset">
          <h3 class="font-weight-lighter textBlue">Personal Info</h3>
          <div class="form-group">
            <label class="col-md-12 col-sm-3 col-xs-12 control-label">Full Name</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <input
                type="text"
                required
                class="form-control"
                name="name"
                value="{{tutor.name}}"
                name="name"
                disabled
              />
              <small class="text-secondary">Your name will be visible publically
                with your article.
              </small>
            </div>
          </div>
          <div class="form-group">
            <label
              class="col-md-12 col-sm-3 col-xs-12 control-label"
            >Institution</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <input
                type="text"
                required
                class="form-control"
                name="edu_institution"
                value="{{tutor.edu_institution}}"
                disabled
              />
              <small class="text-secondary">Institution name
              </small>
            </div>
          </div>
          <div class="form-group">
            <label
              class="col-md-12 col-sm-3 col-xs-12 control-label"
            >Degree</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <input
                type="text"
                required
                class="form-control"
                name="edu_degree"
                value="{{tutor.edu_degree}}"
                disabled
              />
              <small class="text-secondary">Degree name
              </small>
            </div>
          </div>
          <div class="form-group">
            <label
              class="col-md-12 col-sm-3 col-xs-12 control-label"
            >Subject</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <input
                type="text"
                required
                class="form-control"
                name="edu_subject"
                value="{{tutor.edu_subject}}"
                disabled
              />
              <small class="text-secondary">Subject name
              </small>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-12 col-sm-3 col-xs-12 control-label">Graduation
              Year</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <input
                type="year"
                required
                class="form-control"
                name="edu_grad_year"
                value="{{tutor.edu_grad_year}}"
                disabled
              />
              <small class="text-secondary">Graduation Year
              </small>
            </div>
          </div>
          <div class="form-group">
            <label
              class="col-md-12 col-sm-3 col-xs-12 control-label"
            >Bio</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <textarea
                name="bio"
                cols="30"
                rows="5"
                class="form-control"
                disabled
              >{{tutor.bio}}
              </textarea>

            </div>
          </div>
        </fieldset>
        <fieldset class="fieldset pt-4 pb-2">
          <h3 class="font-weight-lighter textBlue">Contact Info</h3>
          <div class="form-group">
            <label class="col-md-12 col-sm-3 col-xs-12 control-label"><i
                class="fas fa-phone pr-2"
              ></i>Phone</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <input
                type="text"
                name="phone"
                class="form-control"
                value="{{tutor.phone}}"
                disabled
              />
              <small class="text-secondary">Your personal phone number.</small>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-12 col-sm-3 col-xs-12 control-label"><i
                class="fas fa-map-marker-alt pr-2"
              ></i>Address</label>
            <div class="col-md-12 col-sm-9 col-xs-12">
              <input
                type="text"
                name="address"
                class="form-control"
                value="{{tutor.address}}"
                disabled
              />
              <small class="text-secondary">Your Address</small>
            </div>
          </div>
        </fieldset>

        <hr />
        <div class="form-group">
          <div class="text-center">
            <a href="/dashboard" class="btn btn-primary">Back</a>
          </div>
        </div>
      </form>
    </section>
    <section class="container bg-white card card-body shadow shadow-sm mt-5">
      <h4 class="text-center pt-4">Send Notification to this tutor</h4>
      <form
        class="pt-3"
        method="POST"
        action="/api/notification/tutor/{{tutor.id}}"
      >
        <div class="form-group">
          <label
            class="col-md-12 col-sm-3 col-xs-12 control-label"
          >Notification</label>
          <div class="col-md-12 col-sm-9 col-xs-12">
            <textarea name="text" cols="30" rows="5" class="form-control">
            </textarea>
            <small class="text-secondary">White the full notification that you
              want to send to this tutor.</small>
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <input
              class="btn btn-primary"
              type="submit"
              name="create-submit"
              value="Send"
            />

          </div>
        </div>
      </form>
    </section>
  </div>
</div>